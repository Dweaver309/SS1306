Module Module1

    Sub Main()

        ' OLED must be initialized before use
        OLED.InitializeDisplay()

        ' Load the bitmap Cloud into the  display buffer
        OLED.DisplayBuffer = Cloud

        '  Display the Cloud
        OLED.Display()

        ' dim IP as string = NetworkInterface.GetAllNetworkInterfaces()(0).IPAddress = IPAddress.Any.ToString()
        ' Not connected so use string below
        ' Write to the second line of the buffer
        OLED.Write(0, 2, "IP:192.168.1.104", True)

        Dim FormatedDateString As String = "dddd hh:mm:ss"

        While (True)

            Dim DS As Date = Date.Now

            Dim str As String = DS.ToString(FormatedDateString)

            OLED.Write(0, 0, str, True)

            Thread.Sleep(1000)

        End While




    End Sub

